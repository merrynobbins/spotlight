<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.audio.spotifyxbmcplugin" version="1.0beta1" name="Spotify plugin" provider-name="Dariusz Biskup">
    <requires>
        <import addon="xbmc.python" version="2.4"/>
        <import addon="script.module.xbmcswift2" version="1.1.1" /> 
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service"
             library="server.py" start="[login|startup]">
	</extension>             
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Spotify for XBMC.</summary>
        <description></description>
        <disclaimer>It requires a Spotify premium account.</disclaimer>
    </extension>
</addon>
