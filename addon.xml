<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.audio.spotlight" version="1.0b1" name="Spotlight" provider-name="Dariusz Biskup">
    <requires>
        <import addon="xbmc.python" version="2.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="ui_addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service"
             library="server_addon.py" start="[login|startup]">
	</extension>             
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Spotlight</summary>
        <description>Spotify plugin for XBMC using native XBMC menus.</description>
        <disclaimer>It requires a Spotify premium account.</disclaimer>
    </extension>
</addon>
